{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Brand</th>
            <td>{{ product.brand }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('productIndex') }}">Return to main list</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
